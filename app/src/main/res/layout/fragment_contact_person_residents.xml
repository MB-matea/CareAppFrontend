<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ContactPersonResidentsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Ime:   "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txt_contact_relationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Odnos:   "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txt_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Broj:   "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txt_contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Email:   "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_contact_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Adresa:   "
                android:textSize="20dp"/>


        </LinearLayout>

    </ScrollView>


</FrameLayout>