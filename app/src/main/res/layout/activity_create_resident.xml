<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GeneralDataResidentsFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Osnovni podaci"
            android:textSize="20dp"
            android:textColor="@color/theme1"
            android:textAlignment="center"
            android:padding="10dp"/>

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Ime:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Prezime:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Soba:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_oib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="OIB:   "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txt_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Datum rođenja:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_place_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Mjesto rođenja:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Nacionalnost:   "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txt_citizenship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Državljanstvo:   "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txt_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Br. osobne iskaznice:   "
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kontakt osoba"
                android:textSize="20dp"
                android:textColor="@color/theme1"
                android:textAlignment="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/txt_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Ime:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_contact_relationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Odnos:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Broj:   "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/txt_contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Email:   "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txt_contact_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Adresa:   "
                android:textSize="20dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zdravstveno stanje"
                android:textSize="20dp"
                android:textColor="@color/theme1"
                android:textAlignment="center"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_mobility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Pokretnost:   "
                    android:textSize="20dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_independence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Samostalnost:   "
                    android:textSize="20dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/txt_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="Bilješka:   "
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme1"
                android:textColor="@color/white"
                android:text="Dodaj"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>